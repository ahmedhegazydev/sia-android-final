<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    android:elevation="@dimen/_3sdp"

    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_hd"
        app:layout_constraintEnd_toStartOf="@id/tvFolloweeName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvFolloweeName"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="@font/muli"
        android:singleLine="true"
        android:textColor="@color/blue"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toTopOf="@id/tvFolloweeGrade"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        app:layout_constraintTop_toTopOf="@id/profile_image"
        tools:text="Hassan Elseoudy" />

    <TextView
        android:id="@+id/tvFolloweeGrade"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="@font/muli"
        android:textColor="@color/dark_slate_gray"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="@id/profile_image"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        app:layout_constraintTop_toBottomOf="@id/tvFolloweeName"
        tools:text="Grade 12" />


    <TextView
        android:id="@+id/btnFollow"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rounded_follow"
        android:fontFamily="@font/muli"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="@string/follow"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="@id/tvFolloweeGrade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvFolloweeName" />


</androidx.constraintlayout.widget.ConstraintLayout>
